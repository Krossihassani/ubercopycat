<div class="container w-50 d-flex bg-light bg-gradient flex-column justify-content-center" style="flex-grow: 1;">
  <h2 class="align-self-center" style="font-family: 'Quicksand', sans-serif; font-weight: 700;">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="d-flex flex-column align-items-center">
      <%= f.button :submit, "Log in", class: 'btn btn-lg btn-primary' %>
  <% end %>
  <br>
      <%= render "devise/shared/links"%>
    </div>
</div>